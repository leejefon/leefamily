{
  "name": "user",
  "base": "User",
  "replaceOnPUT": false,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "password_reset_token": {
      "type": "string"
    },
    "email_confirm_token": {
      "type": "string"
    },
    "avatar": {
      "type": "string"
    },
    "facebookId": {
      "type": "string"
    },
    "bio": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "created": {
      "type": "date",
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
    "organizations": {
      "type": "hasMany",
      "model": "organization",
      "foreignKey": "userId",
      "through": "organizationUser"
    },
    "starOrganizations": {
      "type": "hasMany",
      "model": "organization",
      "foreignKey": "userId",
      "through": "starOrganization"
    },
    "projects": {
      "type": "hasMany",
      "model": "project",
      "foreignKey": "userId",
      "through": "projectUser"
    },
    "starProjects": {
      "type": "hasMany",
      "model": "project",
      "foreignKey": "userId",
      "through": "starProject"
    },
    "projectReviews": {
      "type": "hasMany",
      "model": "projectReview",
      "foreignKey": "userId"
    },
    "transactions": {
      "type": "hasMany",
      "model": "transaction",
      "foreignKey": "userId"
    },
    "stripeUsers": {
      "type": "hasMany",
      "model": "stripeUser",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "generateResetPasswordToken",
        "resetPassword",
        "confirmEmail",
        "checkToken",
        "__get__starOrganizations",
        "__get__starProjects"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "resendConfirmationEmail"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "__get__organizations",
        "__get__projects",
        "__get__transactions",
        "__get__stripeUsers",
        "__create__organizations",
        "__create__projects"
      ]
    }
  ],
  "methods": {}
}
